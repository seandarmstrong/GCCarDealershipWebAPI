        },
        new SelectListItem
        {
            Text = "Maserati",
            Value = "Maserati"
        },
        new SelectListItem
        {
            Text = "Mercedes",
            Value = "Mercedes"
        },
        new SelectListItem
        {
            Text = "Volkswagen",
            Value = "Volkswagen"
        }
    };
    var modelItems = new List<SelectListItem>()
    {
        new SelectListItem
        {
            Text = "A6",
            Value = "A6"
        },
        new SelectListItem
        {
            Text = "AMG GT",
            Value = "AMG GT"
        },
        new SelectListItem
        {
            Text = "GranTurismo",
            Value = "GranTurismo"
        },
        new SelectListItem
        {
            Text = "GTI",
            Value = "GTI"
        },
        new SelectListItem
        {
            Text = "M3",
