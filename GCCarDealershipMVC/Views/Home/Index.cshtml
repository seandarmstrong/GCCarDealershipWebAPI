<div class="jumbotron">
    <h1>GC Car Dealership</h1>
    <p class="lead">The best place for the 10 best cars</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>View All Cars</h2>
        <p>
            When you can't decide what car you want to view, then might as well just view them all!
        </p>
        <p>@Html.ActionLink("View All Cars", "GetCars", "Car", new { area = "" }, new { @class = "btn btn-primary" })</p>
    </div>
    <div class="col-md-8">
        <h2>Find the Perfect Car</h2>
        <p>
            @using (@Html.BeginForm("Search", "Car", FormMethod.Get))
    {
        <div class="row">
            @Html.DropDownListFor(model => model.Make, makeItems, "---SELECT MAKE---", new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="row">
            @Html.DropDownListFor(model => model.Model, modelItems, "---SELECT MODEL---", new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="row">
            @Html.DropDownListFor(model => model.Color, colorItems, "---SELECT COLOR---", new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="row">
            @Html.EditorFor(phone => Model.Year)
        </div>
        <input type="submit" value="Search" />
}
        </p>
    </div>
</div>